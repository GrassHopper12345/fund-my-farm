<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="col-md-6">
   <h3>Select a farm you would like to fund:</h3>
    <div class="mb-2">
      {{#each farms as |farm| }}
         <p>
          <a href="/farm/{{farm.id}}">{{farm.farm_name}}</a>
         </p>
      {{/each}}
    </div>
</div>

{{#if farm.length}}
   <div class="col-md-6 farm-list">
      <h3>Current Farms Funded:</h3>
      {{#each farms as |farm|}}
         <div class="row mb-2">
            <div class="col-md-8">
               <h4><a href="/farm/{{farm.id}}">{{farm.farm_name}}</a></h4>
            </div>
            <div class="col-md-4">
               <button class="btn btn-sm btn-danger" data-id="{{farm.id}}">DELETE</button>
            </div>
         </div>
      {{/each}}
   </div>
{{/if}}

<script src="./js/profile.js"></script>
