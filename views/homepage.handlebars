<!--Main section of the homepage-->
<div class="#">
    {{#each farms as |farm| }}

    <div class="row">
        <div class="col s12 m6">
            <div class="card blue-grey darken-1">
                <div class="card-content white-text">
                    <span class="card-title"><a href="/farm/{{farm.id}}"><img style="height: 5vh" src="https://i.etsystatic.com/15835007/r/il/21c99b/3597237069/il_1140xN.3597237069_ky89.jpg"> {{farm.farm_name}}</a></span>
                    <p>{{farm.description}}</p>
                </div>
                <div class="card-action">
                    <a href="/farm/{{farm.id}}">Farm</a>
                    <a href="#">Investment</a>
                </div>
            </div>
        </div>
    </div>
    {{/each}}
</div>
